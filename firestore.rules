rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Productos - Todos leen, solo ADMINS autenticados escriben
    match /productos/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && 
          (request.auth.token.email == 'briahnas.ventas@gmail.com' || 
           request.auth.token.email == 'briahnasbeauty@gmail.com');
    }
    
    // Usuarios - Solo el due単o ve sus datos
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && 
                           request.auth.uid == userId;
    }

    // Carritos - Solo el due単o
    match /carritos/{userId} {
      allow read, write: if request.auth != null && 
                           request.auth.uid == userId;
    }
    
    // Favoritos - Solo el due単o
    match /favoritos/{favId} {
      allow read, delete, update: if request.auth != null && 
                                  request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.userId;
    }
    
    // Pedidos - Solo el due単o
    match /pedidos/{pedidoId} {
      allow read, delete, update: if request.auth != null && 
                                  request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.userId;
    }
  }
}
